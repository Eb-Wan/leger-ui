<div>
    <template name="User" path="user.ldx"></template>
    <ul l-onload="loadUsers" l-content="users" l-mapto="User"></ul>
    <func name="loadUsers">
        const element = this;
        fetch("https://jsonplaceholder.typicode.com/users")
        .then(e=> e.json())
        .then(e => element.users = e)
        .catch(e => console.error(e));
    </func>
</div>