<div>
    <template name="User" path="user.ldx" />
    <ul l-onload="loadUsers" l-content="users" l-map="User"></ul>

    <func name="loadUsers">
        const element = this;
        fetch("https://jsonplaceholder.typicode.com/users")
        .then(e=> e.json())
        .then(e => {
            element.users = e;
            element._exec();
        })
        .catch(e => console.error(e));
    </func>
</div>