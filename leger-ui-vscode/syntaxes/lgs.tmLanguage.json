{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "sitecom-function",
  "scopeName": "source.lgs",
  "patterns": [
    { "include": "#comment" },
    { "include": "#lgs-function" },
    { "include": "#lgs-procedure" },
    { "include": "#lgs-param" },
    { "include": "#lgs-global-param" },
    { "include": "#lgs-command" },
    { "include": "#tag" },
    { "include": "#entity" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.block.lgs",
          "begin": "\\/\\*",
          "end": "\\*\\/"
        }
      ]
    },
    "lgs-function": {
      "patterns": [
        {
          "name": "meta.lgs-expression.lgs",
          "begin": "(\\$\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
                "1": { "name": "keyword.lgs-identifier.lgs" },
                "2": { "name": "constant.character.lgs" }
          },
          "end": ";",
          "patterns": [
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "lgs-procedure": {
      "patterns": [
        {
          "name": "meta.lgs-expression.lgs",
          "begin": "(\\$\\!)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
                "1": { "name": "keyword.lgs-identifier.lgs" },
                "2": { "name": "entity.name.function.lgs" }
          },
          "end": ";",
          "patterns": [
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "lgs-param": {
      "patterns": [
        {
          "name": "meta.lgs-expression.lgs",
          "begin": "(\\$\\$)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
                "1": { "name": "keyword.lgs-identifier.lgs" },
                "2": { "name": "support.variable.lgs" }
          },
          "end": ";",
          "patterns": [
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "lgs-global-param": {
      "patterns": [
        {
          "name": "meta.lgs-expression.lgs",
          "begin": "(\\$\\%)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
                "1": { "name": "keyword.lgs-identifier.lgs" },
                "2": { "name": "support.class.lgs" }
          },
          "end": ";",
          "patterns": [
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "lgs-command": {
      "patterns": [
        {
          "name": "meta.lgs-expression.lgs",
          "begin": "(\\$\\:)([a-zA-Z_][a-zA-Z0-9_]*)",
          "beginCaptures": {
                "1": { "name": "keyword.lgs-identifier.lgs" },
                "2": { "name": "keyword.control.lgs" }
          },
          "end": ";",
          "patterns": [
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "tag": {
      "patterns": [
        {
          "name": "meta.tag.lgs",
          "begin": "(<)(/?)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.lgs" },
            "2": { "name": "punctuation.definition.tag.lgs" },
            "3": { "name": "entity.name.tag.lgs" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.lgs" }
          },
          "patterns": [
            { "include": "#comment" },
            { "include": "#lgs-function" },
            { "include": "#lgs-param" },
            { "include": "#lgs-global-param" },
            { "include": "#lgs-command" },
            { "include": "#attribute" }
          ]
        }
      ]
    },
    "attribute": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.lgs",
          "match": "\\b[a-zA-Z_:][a-zA-Z0-9:._-]*\\b"
        },
        {
          "name": "string.quoted.double.lgs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            { "include": "#comment" },
            { "include": "#lgs-function" },
            { "include": "#lgs-param" },
            { "include": "#lgs-global-param" },
            { "include": "#lgs-command" }
          ]
        }
      ]
    },
    "entity": {
      "patterns": [
        {
          "name": "constant.character.entity.lgs",
          "match": "&(#x?[0-9a-fA-F]+|[a-zA-Z0-9]+);"
        }
      ]
    }
  }
}