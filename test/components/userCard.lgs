<view>
    <div id="user$$id;">
        <h1>$$name;</h1>
        <div>$$username;</div>
        <div>Address :</div>
        <div>$$address.street;, $$address.suite;, $$address.city;, $$address.zipcode;</div>
    </div>
</view>
<style>
    #user$$id; {
        border: 1px solid black;
    }
    #user$$id; * {
        text-align: left;
    }
</style>