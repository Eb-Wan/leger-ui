{
  "name": "Leger Script",
  "scopeName": "source.lgs",
  "fileTypes": [
    "lgs"
  ],
  "patterns": [
    { "include": "#comment" },
    { "include": "#expression" },
    { "include": "text.html.basic" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.block.lgs",
          "begin": "(?<!\\\\)\\/\\*",
          "end": "\\*\\/"
        }
      ]
    },
    "expression": {
      "name": "meta.expression.lgs",
      "begin": "(?<!\\\\)\\$\\{",
      "beginCaptures": {
        "0": { "name": "keyword.lgs" }
      },
      "end": "\\}",
      "patterns": [
        {
          "include": "source.js"
        }
      ]
    }
  },
  "scope": "source.lgs"
}
